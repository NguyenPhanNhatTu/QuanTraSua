            @Html.DisplayFor(model => model.ChiNhanh.TenChiNhanh)
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="delete" value="Delete" class="btn btn-danger" />
                <input type="button" id="back" value="Back" class="btn btn-info" onclick="location.href='/NhanViens/Index'" />
            </div>
        </div>
    }
</div>
