@model Doan1.Models.NhanVien

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron"></div>
<div class="jumbotron">
    <h2 style=" text-align: center" class="text-danger">Xóa Nhân Viên</h2>
</div>
<div>
    <h4>Nhân Viên</h4>
    <hr />
