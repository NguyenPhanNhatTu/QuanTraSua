<body>
    <div name="test"></div>
    <button onclick="btntestClick()"></button>
    <h1>Material Login Form</h1>
    <div class=" w3l-login-form">
        <h2>Login Here</h2>
        <form action="Login" method="POST">

            <div class=" w3l-form-group">
                <label>Username:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" name="Username" class="form-control" placeholder="Username" required="required" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Password:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" name="Pass" class="form-control" placeholder="Password" required="required" />
                </div>
            </div>
            <div class="wthree-text">
                <label class="anim">
                    <input id="radioQL" type="radio" class="radio" name="PhanQuyen" required="" value="1">
                    <span style="color:white">Quản Lý</span>
                    <input id="radioNV" type="radio" name="PhanQuyen" class="radio" required="" value="2">
                    <span style="color:white">Nhân Viên</span>
                    <input id="radioKH" type="radio" name="PhanQuyen" class="radio" required="" value="3">
                    <span style="color:white">Khách Hàng</span>
                </label>
                <div class="clear"> </div>
            </div>
            <div class="forgot">
                <a href="#ForgotPass" data-toggle="modal" >Forgot Password?</a>
            </div>
            <button type="submit" id="dangnhap">Login</button>

        </form>
        <p class=" w3l-register-p">Don't have an account?<a href="~/Register/Register" class="register"> Register</a></p>
    </div>
    <footer>
        <p class="copyright-agileinfo"> &copy; 2018 Material Login Form. All Rights Reserved | Design by <a href="http://w3layouts.com">W3layouts</a></p>
    </footer>

</body>

