                    },
                    tooltip: {
                        pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>',
                    },
                    accessibility: {
                        point: {
                            valueSuffix: '%'
                        }
                    },
                    plotOptions: {
                        pie: {
                            allowPointSelect: true,
                            cursor: 'pointer',
                            dataLabels: {
                                enabled: true,
                                format: '<b>{point.name}</b>: {point.percentage:.1f} %'
                            }
                        }
                    },
                    series: [{
                        name: 'Loại',
                        colorByPoint: true,
                        data: [{
                            name: 'Trà Sữa',
                            y: @soLuongTraSua1,

                        }, {
                            name: 'Trà',
                            y: @soLuongTra1
                        }, {
                            name: 'Món Khác',
                            y: @soLuongTopping1
                        }]
                    }]
                });

            </script>
        }
        else
        {
            <button class="btn " style="background-color:white; border:none" onclick="location.href='@Url.Action("ThongKe1", "Menus")'">

                Chi Nhánh 1
            </button>
            <button class="btn " style="background-color:white; border:none" onclick="location.href='@Url.Action("ThongKe2", "Menus")'">

                Chi Nhánh 2
            </button>
        }


    </div>


</body>



